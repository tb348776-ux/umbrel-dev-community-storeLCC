server=1
txindex=0

# Pruning: disabled by default (archival).
prune=0

# Peer connections (higher can speed initial sync, up to your bandwidth/CPU).
maxconnections=64

# Try to open the P2P port automatically if your router supports UPnP.
# If UPnP is not available, you can still sync fine as an outbound-only node.
upnp=1

# Network selection (uncomment one, then restart the app):
# testnet=1
# regtest=1

# Ports
port=${DGB_P2P_PORT}
rpcport=${DGB_RPC_PORT}

# RPC (not published to the host by default; internal apps only)
rpcuser=${RPC_USER}
rpcpassword=${RPC_PASSWORD}
rpcbind=0.0.0.0
rpcallowip=127.0.0.1/32
rpcallowip=${APPS_SUBNET}
rpcallowip=10.0.0.0/8
rpcallowip=172.16.0.0/12
rpcallowip=192.168.0.0/16

# Miningcore and the UI make frequent RPC calls; increase queue/threads so DigiByte doesn't reject
# requests with: "http work queue depth exceeded".
rpcworkqueue=128
rpcthreads=16

# ZMQ (for pool notifications)
zmqpubhashblock=tcp://0.0.0.0:${DGB_ZMQ_HASHBLOCK_PORT}

